<mvc:View
    controllerName="com.ust.freestyleproject.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page title="PO Headers">
        <content>

            <Table
                id="poHeaderTable"
                items="{/POHeaders}">

                <columns>
                    <Column><Text text="PO ID" /></Column>
                    <Column><Text text="PO Number" /></Column>
                    <Column><Text text="Vendor" /></Column>
                    <Column><Text text="Modified By" /></Column>
                    <Column><Text text="PO Org" /></Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onPOHeaderPress">

                        <cells>
                            <Text text="{po_id}" />
                            <Text text="{po_number}" />
                            <Text text="{vendor}" />
                            <Text text="{modifiedBy}" />
                            <Text text="{po_org}" />
                        </cells>

                    </ColumnListItem>
                </items>

            </Table>

        </content>
    </Page>

</mvc:View>
