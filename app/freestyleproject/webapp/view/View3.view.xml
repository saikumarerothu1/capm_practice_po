<mvc:View
    controllerName="com.ust.freestyleproject.controller.View3"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page title="PO Items">
        <content>

            <Table
                id="poItemsTable"
                items="{/POItems}">

                <columns>
                    <Column><Text text="PO ID" /></Column>
                    <Column><Text text="Line Item" /></Column>
                    <Column><Text text="Material ID" /></Column>
                    <Column><Text text="Material" /></Column>
                    <Column><Text text="Description" /></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{po_id}" />
                            <Text text="{po_lineitem_number}" />
                            <Text text="{po_item_material_id}" />
                            <Text text="{po_item_materials}" />
                            <Text text="{po_item_materialsdesc}" />
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>

        </content>
    </Page>

</mvc:View>
